# OC Vault Environment Variables
# Copy this to .env and fill in your values

# Cloudflare Account
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here

# D1 Database (Optional - for future use)
D1_DATABASE_ID=e5284918-6980-4bfa-8059-c05a3ce6c5fd

# R2 Storage (Optional - for future use)
R2_BUCKET_NAME=oc-vault-files

# Authentication
# Change these in production!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=321password123

# JWT Secret (generate a secure random string)
JWT_SECRET=your_secure_random_jwt_secret_here

# KV Namespace (Optional)
KV_NAMESPACE_ID=your_kv_namespace_id_here

# Application Settings
NODE_ENV=development
PROJECT_NAME=oc-vault

# Deployment URLs
PRODUCTION_URL=https://oc-vault.pages.dev
DEVELOPMENT_URL=http://localhost:3000
